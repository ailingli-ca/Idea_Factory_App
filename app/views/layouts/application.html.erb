<!DOCTYPE html>
<html>
  <head>
    <title>IdeaFactory</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-light bg-light">
        <div class="nav-container"> 
          <a class="text-primary navbar-brand" href="<%= root_path %>" style="margin-left: 1em">Idea Factory</a>
        </div>
          <div class="nav-items-set justify-content-end">
            <ul class="nav">
              
              <% if(user_signed_in?) %>
                <li class="nav-item mt-2">
                  Hello <%= current_user.first_name %>
                </li>
                <li class="nav-item">
                  <div><%= button_to "Sign out", session_path, method: :delete, class: "btn btn-link"%></div>
                </li>
              <% else %>
                <li class="nav-item">
                  <a class="nav-link" href="<%= new_session_path %>">Sign In</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="<%= new_user_path %>">Sign Up</a>
                </li>
              <% end %>
            </ul>
            <a class="btn btn-outline-dark px-5" href="<%= new_idea_path %>">New Idea</a>
          </div>
      </nav>
    </header> 
    <div>
      <% flash.each do |type, message| %>
        <div class="alert alert-info" role="alert">
          <%= type + "------" + message %>
        </div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
