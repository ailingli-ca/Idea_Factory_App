<div class="container-flex">
    <div class="flex-row flex-wrap m-1">
        <% @ideas.each do |idea| %>
            <div class="my-3">
                <div>
                    <h5><%= link_to idea.title, idea_path(idea), class: "text-decoration-none" %></h5>
                    <p><%=idea.description%></p>
                </div>
            </div>
        <% end %>
    </div>
</div>

